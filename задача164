#include <stdio.h>
#include <conio.h>
#define SZ 5
void main() {
inta[SZ][SZ];
int n;
int ok;
int i,j;
int sum; 
int temp;
printf("*** МАГИЧЕСКИЙ КВАДРАТ ***\n"); 
printf("\nВведите размер матрицы (3..%i) -> ", SZ); 
scanf{"%i", &n);
printf("Введите строки матрицы\n");
printf("После ввода строки, %i целых чисел, ", n);
printf("нажимайте <Enter>\n");
for (i = 0 ; i < n; i++)
{
  printf("->");
  for (j=0;j<n;j++) 
    scanf("%i", &a[i][j]);
}
ok = 1; 
sum = 0;
for (i = 0; i < n; i++)
  sum += a[i][i];
i = 0;
do {
  temp = 0; 
  for (j = 0; j < n; j++)
    temp += a[i][j];
  if (temp != sum) ok = 0;
  i++;
} while ( ok && i < n ) ;
if (ok) {
  j = 0;
do {
  temp = 0; 
  for (i = 0 ; i < n; i++)
    temp += a[i][j];
  if (temp != sum) ok = 0;
    j++;
  } while (ok && i <n);
}
if ( ok ) {
  temp = 0;
  i = n - 1;
  for (j = 0; j < n; j++)
    temp += a[i—-] [j] ; 
  if (temp != sum) ok = 0;
}
printf("Введенная матрица "); 
if (!ok)
  printf("не ");
printf("является \"магическим\"квадратом.\n");
printf("\nДля завершения нажмите <Enter>"); 
getch();
}
